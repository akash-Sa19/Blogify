<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>AkashSahu.io</title>
  </head>
  <body>
    <h1>Homepage</h1>
    <%- include('./partials/nav') %>
    <div class="container mt-3 row row-cols-4">
      <% blogs.forEach(blog => { %>
      <div class="mt-3 mx-3 col">
        <div
          class="card col"
          style="width: 18rem"
        >
          <img
            class="card-img-top"
            src="<%= blog.coverImageURL %>"
            alt="Card image cap"
          />
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <!-- <p class="card-text">
        </p> -->
            <a
              href="/blog/<%= blog._id %>"
              class="btn btn-primary"
              >View</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
